  "item": [
    {
      "name": "OAuth2 授权流程",
      "item": [
        {
          "name": "密码模式获取 Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const jsonData = pm.response.json();",
                  "  if (jsonData.access_token) pm.collectionVariables.set('accessToken', jsonData.access_token);",
                  "  if (jsonData.refresh_token) pm.collectionVariables.set('refreshToken', jsonData.refresh_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {
                  "key": "username",
                  "type": "string",
                  "value": "{{clientId}}"
                },
                {
                  "key": "password",
                  "type": "string",
                  "value": "{{clientSecret}}"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "password",
                  "type": "text"
                },
                {
                  "key": "username",
                  "value": "yunai",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "1024",
                  "type": "text"
                },
                {
                  "key": "scope",
                  "value": "read_userinfo,read_contacts",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/oauth/token",
              "host": ["{{baseUrl}}"],
              "path": ["oauth", "token"]
            },
            "description": "用户名密码模式，登录并自动存储 access_token / refresh_token"
          }
        },
        {
          "name": "校验 Token (check_token)",
          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {
                  "key": "username",
                  "type": "string",
                  "value": "{{clientId}}"
                },
                {
                  "key": "password",
                  "type": "string",
                  "value": "{{clientSecret}}"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "token",
                  "value": "{{accessToken}}",
                  "type": "text",
                  "description": "传入待校验的 access_token"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/oauth/check_token",
              "host": ["{{baseUrl}}"],
              "path": ["oauth", "check_token"]
            },
            "description": "客户端携带 Basic 认证调用 /oauth/check_token，校验 access_token 有效性"
          }
        },
        {
          "name": "刷新 Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const jsonData = pm.response.json();",
                  "  if (jsonData.access_token) pm.collectionVariables.set('accessToken', jsonData.access_token);",
                  "  if (jsonData.refresh_token) pm.collectionVariables.set('refreshToken', jsonData.refresh_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {
                  "key": "username",
                  "type": "string",
                  "value": "{{clientId}}"
                },
                {
                  "key": "password",
                  "type": "string",
                  "value": "{{clientSecret}}"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "refresh_token",
                  "type": "text"
                },
                {
                  "key": "refresh_token",
                  "value": "{{refreshToken}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/oauth/token",
              "host": ["{{baseUrl}}"],
              "path": ["oauth", "token"]
            },
            "description": "使用 refresh_token 动态刷新 access_token"
          }
        },
        {
          "name": "授权码模式 Step1: 获取授权码",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/oauth/authorize?response_type=code&client_id={{authCodeClientId}}&redirect_uri=http://localhost:3000/callback&scope=read",
              "host": ["{{baseUrl}}"],
              "path": ["oauth", "authorize"],
              "query": [
                {
                  "key": "response_type",
                  "value": "code"
                },
                {
                  "key": "client_id",
                  "value": "{{authCodeClientId}}"
                },
                {
                  "key": "redirect_uri",
                  "value": "http://localhost:3000/callback"
                },
                {
                  "key": "scope",
                  "value": "read"
                }
              ]
            },
            "description": "浏览器访问以触发登录 + 授权，回调地址会带上 code"
          }
        },
        {
          "name": "授权码模式 Step2: 换取 Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const jsonData = pm.response.json();",
                  "  if (jsonData.access_token) pm.collectionVariables.set('accessToken', jsonData.access_token);",
                  "  if (jsonData.refresh_token) pm.collectionVariables.set('refreshToken', jsonData.refresh_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {
                  "key": "username",
                  "type": "string",
                  "value": "{{authCodeClientId}}"
                },
                {
                  "key": "password",
                  "type": "string",
                  "value": "{{authCodeClientSecret}}"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "authorization_code",
                  "type": "text"
                },
                {
                  "key": "code",
                  "value": "{{authCode}}",
                  "type": "text",
                  "description": "把 Step1 重定向获取的 code 写入环境变量 authCode"
                },
                {
                  "key": "redirect_uri",
                  "value": "http://localhost:3000/callback",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/oauth/token",
              "host": ["{{baseUrl}}"],
              "path": ["oauth", "token"]
            },
            "description": "授权码换取 Token"
          }
        },
        {
          "name": "客户端模式获取 Token",
          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {
                  "key": "username",
                  "type": "string",
                  "value": "app3"
                },
                {
                  "key": "password",
                  "type": "string",
                  "value": "112233"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "client_credentials",
                  "type": "text"
                },
                {
                  "key": "scope",
                  "value": "read,write",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/oauth/token",
              "host": ["{{baseUrl}}"],
              "path": ["oauth", "token"]
            },
            "description": "客户端模式（无用户参与）"
          }
        },
        {
          "name": "登出并移除刷新 Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/oauth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["oauth", "logout"]
            },
            "description": "调用自定义登出逻辑，删除 refresh_token"
          }
        }
      ]
    },
