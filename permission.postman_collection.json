  "item": [
    {
      "name": "OAuth2 授权流程",
      "description": "演示密码模式、授权码模式、客户端模式、刷新、登出等场景",
      "item": [
        {
          "name": "密码模式获取 Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  var jsonData = pm.response.json();",
                  "  if (jsonData.access_token) {",
                  "    pm.collectionVariables.set('accessToken', jsonData.access_token);",
                  "  }",
                  "  if (jsonData.refresh_token) {",
                  "    pm.collectionVariables.set('refreshToken', jsonData.refresh_token);",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {
                  "key": "username",
                  "value": "{{clientId}}",
                  "type": "string"
                },
                {
                  "key": "password",
                  "value": "{{clientSecret}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "password",
                  "type": "text"
                },
                {
                  "key": "username",
                  "value": "yunai",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "1024",
                  "type": "text"
                },
                {
                  "key": "scope",
                  "value": "read_userinfo,read_contacts",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/oauth/token",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth",
                "token"
              ]
            },
            "description": "OAuth2 密码模式，使用资源所有者用户名密码换取 token"
          }
        },
        {
          "name": "刷新 Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  var jsonData = pm.response.json();",
                  "  if (jsonData.access_token) {",
                  "    pm.collectionVariables.set('accessToken', jsonData.access_token);",
                  "  }",
                  "  if (jsonData.refresh_token) {",
                  "    pm.collectionVariables.set('refreshToken', jsonData.refresh_token);",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {
                  "key": "username",
                  "value": "{{clientId}}",
                  "type": "string"
                },
                {
                  "key": "password",
                  "value": "{{clientSecret}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "refresh_token",
                  "type": "text"
                },
                {
                  "key": "refresh_token",
                  "value": "{{refreshToken}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/oauth/token",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth",
                "token"
              ]
            },
            "description": "使用 refresh_token 刷新 access_token"
          }
        },
        {
          "name": "授权码模式 Step1: 获取授权码",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/oauth/authorize?response_type=code&client_id={{authCodeClientId}}&redirect_uri=http://localhost:3000/callback&scope=read",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth",
                "authorize"
              ],
              "query": [
                {
                  "key": "response_type",
                  "value": "code"
                },
                {
                  "key": "client_id",
                  "value": "{{authCodeClientId}}"
                },
                {
                  "key": "redirect_uri",
                  "value": "http://localhost:3000/callback"
                },
                {
                  "key": "scope",
                  "value": "read"
                }
              ]
            },
            "description": "浏览器打开时会跳转到登录页。登录 + 授权通过后，后端会重定向到 redirect_uri 并携带 code。"
          }
        },
        {
          "name": "授权码模式 Step2: 使用授权码换 Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  var jsonData = pm.response.json();",
                  "  if (jsonData.access_token) {",
                  "    pm.collectionVariables.set('accessToken', jsonData.access_token);",
                  "  }",
                  "  if (jsonData.refresh_token) {",
                  "    pm.collectionVariables.set('refreshToken', jsonData.refresh_token);",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {
                  "key": "username",
                  "value": "{{authCodeClientId}}",
                  "type": "string"
                },
                {
                  "key": "password",
                  "value": "{{authCodeClientSecret}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "authorization_code",
                  "type": "text"
                },
                {
                  "key": "code",
                  "value": "{{authCode}}",
                  "type": "text",
                  "description": "将 Step1 回调URL中的 code 复制到环境变量 authCode 后执行"
                },
                {
                  "key": "redirect_uri",
                  "value": "http://localhost:3000/callback",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/oauth/token",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth",
                "token"
              ]
            },
            "description": "用授权码换取 access_token / refresh_token"
          }
        },
        {
          "name": "客户端模式获取 Token",
          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {
                  "key": "username",
                  "value": "app3",
                  "type": "string"
                },
                {
                  "key": "password",
                  "value": "112233",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "client_credentials",
                  "type": "text"
                },
                {
                  "key": "scope",
                  "value": "read,write",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/oauth/token",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth",
                "token"
              ]
            },
            "description": "OAuth2 客户端凭证模式"
          }
        },
        {
          "name": "登出并移除刷新 Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/oauth/logout",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "oauth",
                "logout"
              ]
            },
            "description": "触发自定义登出逻辑，删除 refresh_token"
          }
        }
      ]
    },
