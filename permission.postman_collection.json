    },
    {
      "key": "authCodeClientId",
      "value": "app2",
      "type": "string"
    },
    {
      "key": "authCodeClientSecret",
      "value": "223344",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
