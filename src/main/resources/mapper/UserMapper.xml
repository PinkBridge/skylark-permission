<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.skylark.permission.authorization.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="cn.skylark.permission.authorization.entity.SysUser">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="enabled" property="enabled" jdbcType="TINYINT"/>
        <result column="gender" property="gender" jdbcType="VARCHAR"/>
        <result column="avatar" property="avatar" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="province" property="province" jdbcType="VARCHAR"/>
        <result column="city" property="city" jdbcType="VARCHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <resultMap id="RoleResultMap" type="cn.skylark.permission.authorization.entity.SysRole">
        <id column="role_id" property="id" jdbcType="BIGINT"/>
        <result column="role_name" property="name" jdbcType="VARCHAR"/>
        <result column="role_remark" property="remark" jdbcType="VARCHAR"/>
        <result column="role_create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="role_update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, username, password, enabled, gender, avatar, phone, email, status, province, city, address, create_time, update_time
    </sql>

    <select id="findByUsername" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_user
        WHERE username = #{username}
        AND enabled = 1
    </select>

    <select id="selectById" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_user
        WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_user
        ORDER BY id ASC
    </select>

    <insert id="insert" parameterType="cn.skylark.permission.authorization.entity.SysUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_user(username, password, enabled, gender, avatar, phone, email, status, province, city, address)
        VALUES (#{username}, #{password}, COALESCE(#{enabled}, 1), #{gender}, #{avatar}, #{phone}, #{email}, 
                COALESCE(#{status}, 'ACTIVE'), #{province}, #{city}, #{address})
    </insert>

    <update id="update" parameterType="cn.skylark.permission.authorization.entity.SysUser">
        UPDATE sys_user
        SET username = #{username},
            password = #{password},
            enabled  = #{enabled},
            gender = #{gender},
            avatar = #{avatar},
            phone = #{phone},
            email = #{email},
            status = #{status},
            province = #{province},
            city = #{city},
            address = #{address}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM sys_user
        WHERE id = #{id}
    </delete>

    <select id="selectRolesByUserId" parameterType="long" resultMap="RoleResultMap">
        SELECT r.id         AS role_id,
               r.name       AS role_name,
               r.remark     AS role_remark,
               r.create_time AS role_create_time,
               r.update_time AS role_update_time
        FROM sys_role r
                 INNER JOIN sys_user_role ur ON ur.role_id = r.id
        WHERE ur.user_id = #{userId}
        ORDER BY r.id ASC
    </select>

    <delete id="deleteUserRoles" parameterType="long">
        DELETE
        FROM sys_user_role
        WHERE user_id = #{userId}
    </delete>

    <insert id="insertUserRoles">
        INSERT INTO sys_user_role(user_id, role_id)
        VALUES
        <foreach collection="roleIds" item="roleId" separator=",">
            (#{userId}, #{roleId})
        </foreach>
    </insert>

    <update id="updatePassword">
        UPDATE sys_user
        SET password = #{password}
        WHERE id = #{userId}
    </update>

</mapper>
