<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.skylark.permission.authorization.mapper.RoleMapper">

    <resultMap id="RoleResult" type="cn.skylark.permission.authorization.entity.SysRole">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectById" parameterType="long" resultMap="RoleResult">
        SELECT *
        FROM sys_role
        WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="RoleResult">
        SELECT *
        FROM sys_role
        ORDER BY id ASC
    </select>

    <insert id="insert" parameterType="cn.skylark.permission.authorization.entity.SysRole">
        INSERT INTO sys_role(name, remark)
        VALUES (#{name}, #{remark})
    </insert>

    <update id="update" parameterType="cn.skylark.permission.authorization.entity.SysRole">
        UPDATE sys_role
        SET name   = #{name},
            remark = #{remark}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE
        FROM sys_role
        WHERE id = #{id}
    </delete>

</mapper>
